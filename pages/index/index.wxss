page, .container, swiper {
  height: 100%;
}

.slide {
  height: 35%;
}

.list-container{ 
  height: 65%; 
  overflow: auto; 
  box-shadow: 0 3px 10px 3px #ccc inset;
} 

.slide-title {
  text-align: center;
  line-height: 80rpx;
  background: linear-gradient(to bottom, #000, rgba(0, 0, 0, 0));
  color: #fff;
  position: absolute;
  left: 0;
  right: 0;
  z-index: 2;
}

