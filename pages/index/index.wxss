/**index.wxss**/
page {
  --themeColor: #f2964f;
  /* font-size: 28rpx; */
}

page, .container, swiper {
  height: 100%;
}

.slide {
  height: 35%;
}

.list-container { 
  height: 65%; 
  overflow: auto; 
  /* box-shadow: 0 10px 10px 0 rgba(0, 0, 0, .5) inset; */
} 

.list-container .title {
  border-bottom: 1px solid #ccc;
  margin: 30rpx 0 0 40rpx;
  padding: 0 0 10rpx 10rpx;
  font-size: 45rpx;
  color: var(--themeColor);
}

.slide-title {
  text-align: center;
  line-height: 80rpx;
  background: linear-gradient(to bottom, #000, rgba(0, 0, 0, 0));
  color: #fff;
  position: absolute;
  left: 0;
  right: 0;
  z-index: 2;
}

show-item:last-of-type navigator {
  margin-bottom: 45rpx;
}

.more {
  line-height: 60rpx;
  padding: 0 20rpx 5rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  background: linear-gradient(to top, #fff 60%, transparent);
  color: var(--themeColor);
}

.more .arrow {
  border-color: var(--themeColor);
  margin: 0 5rpx 15rpx 15rpx;
}