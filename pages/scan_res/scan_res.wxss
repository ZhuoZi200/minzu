/* pages/scan_res/scan_res.wxss */
page {
  position: relative;
  box-sizing: border-box;
  height: 100%;
  padding: 30rpx;
}

image {
  width: 100%;
  border-radius: 15rpx;
  border: 5rpx solid var(--themeColor);
}

.toast {
  text-align: center;
  width: 60%;
  background-color: rgba(0, 0, 0, .5);
  font-size: 50rpx;
  border-radius: 45rpx;
  color: #fff;
  padding: 20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}