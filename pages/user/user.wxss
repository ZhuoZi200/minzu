/* pages/user/user.wxss */
navigator image {
  width: 120rpx;
  height: 120rpx;
  float: left;
  border: 2px solid #cdcdcd;
  border-radius: 20rpx;
  margin-right: 30rpx;
}

.name {
  font-size: 60rpx;
}

.subtitle {
  font-size: 30rpx;
  color: #cdcdcd;
}

.login {
  /* display: flex; */
  display: flow-root;
  position: relative;
  margin: 0 20rpx;
  padding: 20rpx 10rpx;
  border-bottom: 1px solid #cdcdcd;

}

/* 登录后样式 */
.user-box {
  overflow: hidden;
  position: relative;
}

.user-bg {
  width: 100%;
  filter: blur(10rpx);
}

.user-info {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}

.user-icon {
  width: 135rpx;
  height: 135rpx;
  margin: 20rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}

.user-name {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
}

/* 小箭头样式补充 */
.arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -5px;
}