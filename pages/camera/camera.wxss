/* pages/camera/camera.wxss */
page, camera {
  height: 100%;
}

.button {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  left: 0;
  right: 0;
  bottom: 50rpx;
  margin: auto;
  background-color: #707070;
}

.button::after {
  content: '';
  display: block;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 1px solid #ccc;
  flex-shrink: 0;
}